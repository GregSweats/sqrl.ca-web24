---
import { Card } from '@eliancodes/brutal-ui';
import { Image } from 'astro:assets';
import { marked } from 'marked';

interface Props {
  title: string;
  imgSrc: ImageMetadata;
  imgAlt: string;
  description: string;
}

const { title, imgAlt, imgSrc, description } = Astro.props;

const descriptionHtml = marked.parse(description);

---

<Card color='white'>
  <h3 class='poppins text-lg md:text-xl'>{title}</h3>
  <div class='rounded-lg border-3 border-black my-4 h-56'>
    <Image
      src={imgSrc}
      alt={imgAlt}
      width={800}
      height={400}
      class='rounded h-full w-full object-cover'
    />
  </div>
  <p class='poppins' set:html={descriptionHtml}></p>
  <slot />
</Card>
